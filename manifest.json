{
  "name": "FallSnow",
  "description": "Elements of the page are falling down like snow",
  "version": "0.99",
  "manifest_version": 3,
  "action": {
    "default_popup": "fallsnow.html",
    "default_icon": "fallsnow.png"
  },
  "content_scripts": [
    {
      "matches": [ "https://*/*" ],
      "css": [ "snow.css" ],
      "js": [ "make-it-snow.js" ],
      "exclude_matches": [], 
      "all_frames": false,
      "match_origin_as_fallback": false,
      "match_about_blank": false,
      "run_at": "document_idle",
      "world": "MAIN"
    }
  ],
  "_permissions": [
    "storage"
  ]
}